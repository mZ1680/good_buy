.main_content {
  padding-bottom: 60px;
}

.empty_cart_wrap zan-row {
  display: block;
}

.empty_cart {
  padding: 50pt 0 5pt;
}

.empty_cart_sub {
  padding: 5pt 0 10pt;
}

.empty_cart_btn {
  padding-top: 15pt;
}

.cart_settlement_wrap {
  width: 100%;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
}

.cart_settlement_select {
  height: 50px;
  line-height: 50px;
}

.cart_settlement_money, .cart_settlement_tips {
  width: 100%;
  height: 25px;
  text-align: right;
  padding: 0 10px;
  display: inline-block;
  box-sizing: border-box;
}

.cart_settlement_money {
  line-height: 30px;
}

.cart_settlement_tips {
  line-height: 20px;
}

.cart_nothing_more {
  text-align: center;
  font-size: 10pt;
  color: #999;
  margin: 12pt 0;
}